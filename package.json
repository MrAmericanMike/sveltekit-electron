{
	"name": "sveltekit-electron",
	"version": "0.0.1",
	"author": "MrAmericanMike",
	"private": true,
	"description": "Minimal Sveltekit + Electron starter template.",
	"main": "src/electron/main.cjs",
	"type": "module",
	"scripts": {
		"dev": "pnpm run dev:all",
		"dev:all": "concurrently --kill-others -n=Svelte,Electron -c=red,blue \"vite dev\" \"electron src/electron/main.cjs\"",
		"dev:svelte": "vite dev",
		"dev:electron": "electron src/electron/main.cjs",
		"build": "pnpm run build:svelte && pnpm run build:electron",
		"build:svelte": "vite build",
		"build:electron": "electron-builder --config electron-builder.config.json"
	},
	"dependencies": {
		"electron-context-menu": "^3.3.0",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^1.1.0",
		"electron-window-state": "^5.0.3"
		
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "1.0.1",
		"@sveltejs/kit": "1.0.10",
		"concurrently": "^7.6.0",
		"electron": "^21.0.0",
		"electron-builder": "^23.1.0",
		"prettier": "^2.8.2",
		"prettier-plugin-svelte": "^2.9.0",
		"sass": "^1.57.1",
		"svelte": "^3.55.0",
		"vite": "^4.0.4"
	},
	"overrides": {
		"electron": {
			"got": "^12.5.1"
		}
	}
}

